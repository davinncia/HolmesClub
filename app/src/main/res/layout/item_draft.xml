<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    android:background="@drawable/rectangle_rounded"
    android:elevation="8dp">


    <ImageView
        android:id="@+id/iv_article_item"
        android:layout_width="@dimen/image_list_item_width"
        android:layout_height="match_parent"
        android:src="@drawable/ic_feather"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_title_article_item"
        style="@style/ItemTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_article_item"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Title Of the article you see" />

    <TextView
        android:id="@+id/tv_date_article_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:gravity="end"
        android:textStyle="italic"
        style="@style/ItemContent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_article_item"
        tools:text="20/06/2020" />


</androidx.constraintlayout.widget.ConstraintLayout>